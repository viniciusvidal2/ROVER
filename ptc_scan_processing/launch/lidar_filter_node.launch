<?xml version="1.0"?>

<launch>   
    <!-- Load the YAML file with parameters -->
    <rosparam command="load" file="$(find ptc_scan_processing)/config/params.yaml"/>

    <!-- Run the filter node -->
    <node name="filter_raw_cloud_node" pkg="ptc_scan_processing" type="filter_raw_cloud_node" output="screen"/>

    <!-- Run the merge node -->
    <node name="laser_scan_merge_node" pkg="ptc_scan_processing" type="laser_scan_merge_node" output="screen"/>

    <!-- Launch RViz with config -->
    <node name="rviz_lidar_filter" pkg="rviz" type="rviz" args="-d $(find ptc_scan_processing)/config/rviz_config.rviz" output="screen"/>
</launch>
